
public class Sortingalgorithms {

	public static void main(String[] args) {
	
		int a[] = {20,12,10,15,2};
		
		System.out.println("\n The original array - ");
		for (int i = 0; i <a.length; i++) {
			System.out.prinln(a[i] + " ");
		}
		
		int i = 0, n = 0, temp = 0;
		
		for(n = 5; n >= 1; n--) {
			for(i = 0; i < n-1; i++) {
				if(	a[i] > a[i+1]) {
					temp = a[i];
					a[i] = a[i+1];
					a[i+1] = temp;
				}
			}
			
		}
		
		System.out.println("\n The sorted array - ");
		for (int i = 0; i <a.length; i++) {
			System.out.prinln(a[i] + " ");
		}
	}

}
